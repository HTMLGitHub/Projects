/**
 * 
 */
package controller;

import java.util.List;

import javax.servlet.http.HttpServletRequest;

import com.revature.ajax.OperatorMessage;

import engine.HealingPotion;
import engine.InventoryItem;
import engine.Item;
import engine.Location;
import engine.LootItem;
import engine.Monster;
import engine.Player;
import engine.Quest;
import engine.QuestCompletionItem;
import engine.Weapon;

/**
 * @author bak12
 *
 */
public interface WorldController
{
	//create 
	public OperatorMessage CreateItem(Item item);
	public abstract OperatorMessage CreateMonster(Monster monster);
	public abstract OperatorMessage CreateQuest(Quest quest);
	public abstract OperatorMessage CreateLocation(Location location);
	
	//update
	public abstract OperatorMessage UpdateItem(Item item);
	public abstract OperatorMessage UpdateMonster(Monster monster);
	public abstract OperatorMessage UpdateQuest(Quest quest);
	public abstract OperatorMessage UpdateLocation(Location location);
	
	//delete
	public abstract OperatorMessage DeleteItem(Item item);
	public abstract OperatorMessage DeleteMonster(Monster monster);
	public abstract OperatorMessage DeleteQuest(Quest quest);
	public abstract OperatorMessage DeleteLocation(Location location);
	
	//find all
	public abstract List<Item> findAllItems();
	public abstract List<Monster> findAllMonsters();
	public abstract List<Quest> findAllQuests();
	public abstract List<Location> findAllLocations();
	public abstract List<HealingPotion> findAllHealing();
	public abstract List<InventoryItem> findAllInventory();
	public abstract List<LootItem> findAllLootItems();
	public abstract List<QuestCompletionItem> findAllQuestItems();
	public abstract List<Weapon> findAllWeapons();
	
	
	//find by Id
	public abstract Item ItemById(Item item, HttpServletRequest req);
	public abstract Monster MonsterById(Monster monster, HttpServletRequest req);
	public abstract Quest QuestById(Quest quest, HttpServletRequest req);
	public abstract Location LocationById(Location location, HttpServletRequest req);
	public abstract Player PlayerById(Player player, HttpServletRequest req);
	public abstract HealingPotion PotionById(HealingPotion hp, HttpServletRequest req);
	public abstract InventoryItem InventoryItemById(InventoryItem ii, HttpServletRequest req);
	public abstract LootItem LootItemById(LootItem li, HttpServletRequest req);
	public abstract QuestCompletionItem QuestCompletionItemById(QuestCompletionItem qci, HttpServletRequest req);
	public abstract Weapon WeaponById(Weapon w, HttpServletRequest req);
}
